# Environment Configuration Template
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=sqlite:///data/knowledge.db
# For PostgreSQL: postgresql://user:password@localhost/knowledge_db

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2
# Options: all-MiniLM-L6-v2, all-mpnet-base-v2, paraphrase-multilingual-MiniLM-L12-v2

# AI Provider Configuration (optional)
# OpenAI
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Scraping Configuration
SCRAPING_DELAY=1.0
SCRAPING_TIMEOUT=10
MAX_WORKERS=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Application Settings
APP_NAME=Smart Knowledge Repository
APP_VERSION=1.0.0
DEBUG_MODE=False
